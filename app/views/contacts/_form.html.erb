<div class="container">
  <div class="row">
    <%= form_for(@contact) do |f| %>
    <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="col-md-5">
      <%= f.text_field :name, :class => "ficatransparente colocaborda largura col-md-10", placeholder: "NOME" %>
    </div>
    <br>
    <br>
    <div class="col-md-5">
      <%= f.text_field :email, :class => "ficatransparente colocaborda largura col-md-10", placeholder: "EMAIL"%>
    </div>
    <br>
    <br>
    <div class="col-md-5">
      <%= f.text_area :message, :class => "ficatransparente colocaborda textarea col-md-10", placeholder: "MENSAGEM", :rows => 9 %>
    <br>
    <br>
    </div>
    
    <div class="col-md-12 pull-center">
      <br>
      <%= f.submit "Enviar", :class => "col-md-4 branco btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>