<div class="container">
  <div class="row">
    <%= form_for(@contact) do |f| %>
    <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :name, :class => "mudatexto" %><br>
      <%= f.text_field :name, :class => "ficatransparente colocaborda", :size => "64x5" %>
    </div>
    <div class="field">
      <%= f.label :email, :class => "mudatexto" %><br>
      <%= f.text_field :email, :class => "ficatransparente colocaborda", :size => "64x5" %>
    </div>
    <div class="field">
      <%= f.label :message, :class => "mudatexto" %><br>
      <%= f.text_area :message, :size => "63x6", :class => "ficatransparente colocaborda" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit :class => "btn btn-primary col-md-6"%>
    </div>
    <% end %>

  </div>
</div>