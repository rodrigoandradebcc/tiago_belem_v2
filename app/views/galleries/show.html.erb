<div class="container" >
  <p id="notice"><%= notice %></p>

  <header class="clearfix">
    <h1>Gallery <span><%= @gallery.name %></span></h1> 
  </header>
  <div class="main">        
    <ul id="og-grid" class="og-grid">



      <% for photo in @gallery.photos %>


      <li>
        <a>
          <%= link_to (image_tag (photo.image_url(:thumb).to_s )), photo.image_url, { class: "grouped_elements", :rel => "zomg_awesome_images" } %>
          <div class="name"><%= photo.name %></div>
          <%= link_to "edit", edit_photo_path(photo) %>
          <%= link_to "remove", photo, :method => :delete, data: {:confirm => 'Are you sure?'} %>
        </a>
      </li>
      <% end %>
    </ul>
  </div>


  <%= link_to "Add a photo", new_photo_path(:gallery_id => @gallery) %> |
  <%= link_to 'Edit', edit_gallery_path(@gallery) %> |
  <%= link_to 'Back', galleries_path %>
</div>