<body class="<%= ('backhome' if params[:controller] == 'welcome') || ('backbio' if params[:controller] == 'bios') || ('backcont' if params[:controller] == 'contacts') || ('backmusica' if params[:controller] == 'musics') || ('backmidia' if params[:controller] == 'midia') || ('backmidia' if params[:controller] == 'galleries') || ('backagenda' if params[:controller] == 'events')%>">



	
